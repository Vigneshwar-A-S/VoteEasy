<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.highsecured.voteeasy">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.front"/>
    <uses-feature android:name="android.hardware.autofocus"/>

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ChooseActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ScanActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SigninActivity" 
            android:screenOrientation="portrait"/>
        <activity android:name=".CodeVerifyActivity" 
            android:screenOrientation="portrait"/>
        <activity android:name=".InfoActivity" 
            android:screenOrientation="portrait"/>
        <activity android:name=".PollActivity" 
            android:screenOrientation="portrait"/>
        <activity android:name=".PopActivity"
            android:theme="@style/AppTheme.PopMe"
            android:screenOrientation="portrait"/>
        <activity android:name=".ErrorActivity" 
            android:screenOrientation="portrait"/>
        <activity android:name=".VoiceVoting.VoiceSigninSecondary" 
            android:screenOrientation="portrait"/>
        <activity android:name=".VoiceVoting.VoiceMainActivity" 
            android:screenOrientation="portrait"/>
        <activity android:name=".VoiceVoting.VoiceOptionActivity" 
            android:screenOrientation="portrait"/>
        <activity android:name=".VoiceVoting.VoiceCheckingIMEI" 
            android:screenOrientation="portrait"/>
        <activity android:name=".WelcomeActivity" 
            android:screenOrientation="portrait"/>
<!--        <activity android:name=".ChooseActivity" />-->
    </application>

</manifest>